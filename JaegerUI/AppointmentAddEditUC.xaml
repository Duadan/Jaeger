<UserControl x:Class="JaegerUI.AppointmentAddEditUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JaegerUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800"
             DataContext="{Binding AppointmentAddEditUC,Source={StaticResource Locator}}" FontFamily="Gill Sans MT">
    <Grid Margin="5,0,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition MinWidth="175"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="0,0,5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition Height="85"/>
                <RowDefinition Height="65"/>
                <RowDefinition Height="45"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <Label Content="Bezeichnung" FontSize="16"/>
                <TextBox x:Name="TxtName" Height="25" VerticalContentAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <Label Content="Beginn" FontSize="16"/>
                <DatePicker x:Name="DPStartDate" Height="25" VerticalContentAlignment="Center"/>
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="CBHrs" Height="25" Width="70" VerticalContentAlignment="Center"/>
                    <Label Width="5"/>
                    <ComboBox x:Name="CBMin" Height="25" Width="70" VerticalContentAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="2">
                <Label Content="Ort" FontSize="16"/>
                <TextBox x:Name="TxtPlace" Height="25" VerticalContentAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Row="3">
                <RadioButton x:Name="RBHunt" Content="Jagd" FontSize="16"/>
                <RadioButton x:Name="RBNoHunt" Content="Andere" FontSize="16"/>
            </StackPanel>
        </Grid>
        <DataGrid Grid.Column="1" Margin="5,0,0,0">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn/>
                <DataGridTextColumn/>
                <DataGridComboBoxColumn/>
                <DataGridTemplateColumn/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="BtnCancel" Content="Abbrechen" Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Height="30" Background="#FFE0CBA8"/>
        <Button x:Name="BtnConfirm" Content="Bestätigen" Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Height="30" Margin="0,0,90,0" Background="#FFE0CBA8"/>
    </Grid>
</UserControl>
